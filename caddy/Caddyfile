{
    acme_ca https://acme-v02.api.letsencrypt.org/directory
}

rtc-bb.camai.kh {
    # reverse_proxy web:80
    encode zstd gzip

    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        Referrer-Policy "strict-origin-when-cross-origin"
        Content-Security-Policy "default-src * 'unsafe-inline' 'unsafe-eval'; connect-src *; img-src * data: blob:; font-src *;"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }

    # # Library paths
    # handle_path /library* {
    #     reverse_proxy library_nginx:80 {
    #         header_up X-Forwarded-Proto {scheme}
    #         header_up X-Forwarded-Host {host}
    #         header_up X-Forwarded-For {remote_host}
    #     }
    # }

    # Everything else goes to main web app
    handle {
        reverse_proxy web:80 {
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            header_up X-Forwarded-For {remote_host}
        }
    }
}
api.rtc-bb.camai.kh {
    reverse_proxy webserver:80
    encode zstd gzip

    header {
        # Security headers
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        Referrer-Policy "strict-origin-when-cross-origin"
        # Content-Security-Policy "default-src 'self';"
        Content-Security-Policy "
        default-src 'self';
        script-src 'self';
        style-src 'self' 'unsafe-inline';
        img-src 'self' data:;
        connect-src 'self' https://rtc-bb.camai.kh;
        object-src 'none';
        base-uri 'self';
        frame-ancestors 'self';
        "
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

        # CORS headers
        Access-Control-Allow-Origin "https://rtc-bb.camai.kh"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Authorization, Content-Type"
        Access-Control-Allow-Credentials "true"
        Access-Control-Max-Age: 86400

    }
    

    # Handle preflight OPTIONS requests
    @options {
        method OPTIONS
    }
    respond @options 204
}

moodle.rtc-bb.camai.kh {
    reverse_proxy moodle-app:80

    encode gzip

    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }
}

library.rtc-bb.camai.kh {
   reverse_proxy library_nginx:80 {
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            header_up X-Forwarded-For {remote_host}
        }
    encode zstd gzip

}





